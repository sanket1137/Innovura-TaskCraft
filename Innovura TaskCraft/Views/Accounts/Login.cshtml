@page
@model DataAccess.Entities.User

@if (ViewData!=null && ViewData.ModelState.IsValid)
{
    <p class="text-danger">@ViewData.ModelState["Error"].Errors.FirstOrDefault()?.ErrorMessage</p>
}
<h2>Login</h2>

<form method="post">
    <div>
        <label for="emailid">EmailId:</label>
        <input type="email" id="emailid" name="UserEmailId" />
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="Password" />
    </div>
    <button type="submit">Login</button>
    <a asp-controller="Accounts" asp-action="Register">Register as a new user</a>
</form>
